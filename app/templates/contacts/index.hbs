<h2 class="sub-header">Contacts</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company</th>
            <th>Phone</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each itemController="contact"}}
            <tr {{bind-attr id="id"}}>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{company}}</td>
                <td>{{phone}}</td>
                <td>
                    {{#link-to 'contact' this class="btn btn-xs btn-default"}}<span
                            class="glyphicon glyphicon-edit"></span>{{/link-to}}
                    <a href="#" class="btn btn-xs btn-default" {{action "removeContact"}}><span
                            class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>