<form class="form-horizontal">
    <fieldset>
        <!-- Form Name -->
        {{#if isNew}}
            <legend>New Contact</legend>
        {{else}}
            <legend>Edit Contact</legend>
        {{/if}}
        <!-- Text inputs -->
        <div class="form-group">
            <label class="col-md-4 control-label">First Name</label>

            <div class="col-md-4">
                {{input value=firstName type="text" class="firstName form-control input-md" required=""}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Last Name</label>

            <div class="col-md-4">
                {{input value=lastName type="text" class="lastName form-control input-md" required=""}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Company</label>

            <div class="col-md-4">
                {{input value=company type="text" class="company form-control input-md" required=""}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Phone</label>

            <div class="col-md-4">
                {{input value=phone type="text" class="phone form-control input-md" required=""}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Email</label>

            <div class="col-md-4">
                {{input value=email type="text" class="email form-control input-md"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Address</label>

            <div class="col-md-4">
                {{input value=address type="text" class="address form-control input-md"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Notes</label>

            <div class="col-md-4">
                {{textarea value=notes class="notes form-control"}}
            </div>
        </div>
        <!-- Buttons -->
        <div class="form-group">
            <label class="col-md-4 control-label"></label>

            <div class="col-md-4">
                {{#if isNew}}
                    <button {{action "createContact"}} class="create btn btn-default">Create</button>
                {{else}}
                    <button {{action "updateContact"}} class="update btn btn-default">Update</button>
                {{/if}}
                <button {{action "cancelChanges"}} class="btn btn-inverse">Cancel</button>
            </div>
        </div>
    </fieldset>
</form>